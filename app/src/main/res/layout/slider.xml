<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context="com.javatechig.droid.ui.TelaExemplo"
    android:layout_centerInParent="true">>


    <!--<RelativeLayout-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="visible"-->
        <!--android:id="@+id/relativeLayout"-->
        <!--android:layout_centerInParent="true">-->

        <SeekBar
            android:id="@+id/seekbar_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            android:secondaryProgress="0"
            android:indeterminate="false"
            android:minHeight="20dip"
            android:maxHeight="20dip"/>

        <TextView
            android:id="@+id/textview_left_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza"
            android:layout_below="@+id/seekbar_slider"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/textview_middle_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza"
            android:layout_below="@+id/seekbar_slider"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/textview_rigth_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza"
            android:layout_below="@+id/seekbar_slider"
            android:layout_alignParentRight="true"/>


        <ImageView
            android:id="@+id/imageview_left_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <ImageView
            android:id="@+id/imageview_middle_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageview_left_slider"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageview_rigth_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_alignTop="@+id/imageview_left_slider"
            android:layout_alignRight="@+id/seekbar_slider"
            android:layout_alignEnd="@+id/seekbar_slider" />


    <!--</RelativeLayout>-->



</RelativeLayout>
